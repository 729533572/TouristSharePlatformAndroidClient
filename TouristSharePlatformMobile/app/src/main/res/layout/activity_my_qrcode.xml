<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_qrcode"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="zjut.salu.share.activity.qrcode.MyQRCodeActivity">
<include layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <zjut.salu.share.widget.CommonCircleImageView
            android:id="@+id/cciv_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ico_user_default"
            />
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_user_female"
                android:text="清水爱优"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qsay@163.com"
                android:textColor="@color/hint_color"
                />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/iv_qrcode"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:src="@drawable/bangumi_cover_test"
        android:scaleType="fitXY"
        />

    <TextView
        android:gravity="center"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_scan_text"
        android:textColor="@color/hint_color"
        />
</LinearLayout>
