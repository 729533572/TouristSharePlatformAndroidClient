<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    app:elevation="0dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_love_card"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            android:elevation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
</android.support.design.widget.AppBarLayout>
<com.andview.refreshview.XRefreshView
    android:id="@+id/pull_refresh_view_love_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <zjut.salu.share.widget.PullSeparateListView
            android:id="@+id/pull_lv_love_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:background="#e2e4fe"
            android:dividerHeight="15dp"
            />

    <include layout="@layout/layout_connect_error"
        android:visibility="gone"
        android:id="@+id/view_error_connection_love_card"
        />
</com.andview.refreshview.XRefreshView>
</LinearLayout>
