<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tourism_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/bacground"
    tools:context="zjut.salu.share.activity.destination.TourismDetailActivity">

    <include layout="@layout/layout_toolbar"/>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <zjut.salu.share.widget.MyScrollView
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_cover"
                    android:scaleType="fitXY"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ico_user_default"
                    />
                    <View
                        android:layout_gravity="bottom|end"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:background="@drawable/image_count_bg"
                        android:alpha="0.3"
                        />
                        <TextView
                            android:id="@+id/tv_covernum"
                            android:paddingLeft="4dp"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:text="66张"
                            android:layout_gravity="bottom|end|center"
                            android:textColor="@color/white_30"
                            />
                </FrameLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="美登利寿司 涩谷店"
                        android:textSize="16sp"
                        />
                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RatingBar
                            android:id="@+id/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/ratingBarStyleSmall"
                            />
                        <TextView
                            android:id="@+id/tv_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.66分"
                            android:textColor="@color/hint_color"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="美食"
                        android:gravity="bottom"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/hint_color"
                        />
                </LinearLayout>

            </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:background="@color/text_hint"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    />
                <include layout="@layout/item_tourist_attraction_bottom"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_margin="6dp"
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_gravity="center"
                           android:layout_width="18dp"
                           android:layout_height="18dp"
                           android:src="@drawable/ic_merchant"
                           />
                       <TextView
                           android:id="@+id/tv_name_plus_foreignname"
                           android:layout_marginLeft="6dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="美登利寿司美登利寿司美登利寿司美登利寿司美登利寿司美登利寿司"
                           />
                   </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:background="@color/text_hint"
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        />
                    <LinearLayout
                        android:layout_margin="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_merchant_description"
                            />
                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_marginLeft="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="豪华拼盘是许多人的最爱"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_foods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_food_recommend"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:drawableRight="@drawable/arrow_grey_right_normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/food_recommend_text"
                            android:textColor="@color/font_normal"
                            android:gravity="center_vertical"
                            android:textSize="16sp"/>
                        <ImageView
                            android:layout_marginLeft="80dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/fire"
                            android:layout_gravity="center_vertical"
                            />
                    </FrameLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/white"
                        android:src="@drawable/line_bg"/>

                    <TextView
                        android:layout_marginTop="6dp"
                        android:id="@+id/tv_food_names"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="特选寿司拼盘 海鳗寿司 青花鱼寿司 "
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:minHeight="30dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_price"
                />
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_price"
                android:layout_marginLeft="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2500日元(越419元)"
                />
            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:minHeight="30dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_open_time"
                        />
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tv_time_open"
                        android:layout_marginLeft="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="如果周一是节假日则前一天"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.baidu.mapapi.map.MapView
                        android:id="@+id/mapview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:clickable="true"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_local_path"
                            />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_address"
                            android:layout_marginLeft="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="东京都涉谷区道玄坂"
                            android:layout_marginRight="75dp"
                            />

                    </LinearLayout>
                        <TextView
                            android:layout_gravity="end|center_vertical"
                            android:id="@+id/tv_nav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_general_margin"
                            android:layout_marginRight="@dimen/default_general_margin"
                            android:background="@drawable/btn_pin_bg"
                            android:gravity="center"
                            android:text="@string/guideing_text"
                            android:textColor="@color/focus_text_color"
                            android:textSize="@dimen/default_small_text_size" />
                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:minHeight="30dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_subway"
                        />
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tv_guide"
                        android:layout_marginLeft="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JR涉谷站,步行到达"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_phone"
                    />
            <TextView
                android:drawableRight="@drawable/arrow_grey_right_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="800-820-8820"
                android:id="@+id/tv_phone"
                android:gravity="center_vertical"
                />
                </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/white"
                        android:src="@drawable/line_bg"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_web"
                            />
                        <TextView
                            android:drawableRight="@drawable/arrow_grey_right_normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="http://www.sfss.com"
                            android:id="@+id/tv_website"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/white"
                        android:src="@drawable/line_bg"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_info"
                            />
                        <TextView
                            android:drawableRight="@drawable/arrow_grey_right_normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="春季是最佳时间"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_activity"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>
</android.support.v7.widget.CardView>
        </LinearLayout>
    </zjut.salu.share.widget.MyScrollView>
    <!--底部显示所有的选项-->
    <include layout="@layout/item_attraction_bottom_card"/>

</FrameLayout>
</LinearLayout>
