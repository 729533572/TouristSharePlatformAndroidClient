<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:background="@drawable/border_line_payed_order_list"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            >
            <TextView
                android:text="@string/order_oid_prefix_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                />
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_payed_oid"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="sfdasdsasads"
                android:textColor="@color/orange"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                >
                <TextView
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="下单时间："
                    />
                <TextView
                    android:id="@+id/tv_payed_odate"
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-08-12"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/text_hint"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_margin="4dp"
                android:id="@+id/iv_payed_order_cover"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/feedback_cartoon"
                />
            <LinearLayout
                android:paddingLeft="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="13dp"
                    android:id="@+id/tv_payed_order_pname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="秋冬季休闲卡通阿狸睡衣女套装舒适纯棉秋冬季休闲卡通阿狸睡衣女套装舒适纯棉"
                    />
                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/order_quantity_text"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>