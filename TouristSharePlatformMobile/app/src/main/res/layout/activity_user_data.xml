<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_data"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacground"
    android:fitsSystemWindows="true"
    tools:context="zjut.salu.share.activity.UserDataActivity">

    <include layout="@layout/layout_toolbar"/>

    <zjut.salu.share.widget.MyScrollView
        android:id="@+id/user_setting_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rl_layout_btn_user_data_avatar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:background="@drawable/menu_btn_selector">
                <TextView
                    android:drawableRight="@drawable/arrow_grey_right_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/my_avatar_text"
                    android:textColor="@color/font_normal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/iv_user_avatar_user_data"
                    android:src="@drawable/user_avatar_ym_test"
                    android:layout_width="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:layout_height="80dp" />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/white"
                android:src="@drawable/line_bg"/>
            <RelativeLayout
                android:id="@+id/rl_layout_btn_user_data_nick_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:background="@drawable/menu_btn_selector">
                <TextView
                    android:drawableRight="@drawable/arrow_grey_right_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/nickname_text"
                    android:textColor="@color/font_normal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_user_data_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="有咩酱"
                    android:textColor="@color/text_hint"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/white"
                android:src="@drawable/line_bg"/>
            <RelativeLayout
                android:id="@+id/rl_layout_btn_user_data_sex"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:background="@drawable/menu_btn_selector">
                <TextView
                    android:drawableRight="@drawable/arrow_grey_right_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/sex_text"
                    android:textColor="@color/font_normal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_user_data_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="女"
                    android:textColor="@color/text_hint"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/white"
                android:src="@drawable/line_bg"/>
            <RelativeLayout
                android:id="@+id/rl_layout_btn_user_data_mail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:background="@drawable/menu_btn_selector">
                <TextView
                    android:drawableRight="@drawable/arrow_grey_right_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/email_text"
                    android:textColor="@color/font_normal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_user_data_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="youmiejiang@163.com"
                    android:textColor="@color/text_hint"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/white"
                android:src="@drawable/line_bg"/>
            <RelativeLayout
                android:id="@+id/rl_layout_btn_user_data_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:background="@drawable/menu_btn_selector">
                <TextView
                    android:drawableRight="@drawable/arrow_grey_right_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/cell_phone_text"
                    android:textColor="@color/font_normal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_user_data_cell_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="15866666666"
                    android:textColor="@color/text_hint"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/white"
                android:src="@drawable/line_bg"/>
            <RelativeLayout
                android:id="@+id/rl_layout_btn_user_data_city"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:background="@drawable/menu_btn_selector">
                <TextView
                    android:drawableRight="@drawable/arrow_grey_right_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/city_text"
                    android:textColor="@color/font_normal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_user_data_city"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="江苏省南京市"
                    android:textColor="@color/text_hint"
                    android:gravity="center_vertical"
                    android:layout_marginRight="35dp"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="35dp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/white"
                android:src="@drawable/line_bg"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/white"
                android:src="@drawable/line_bg"/>
            <RelativeLayout
                android:id="@+id/rl_layout_btn_signature"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:background="@drawable/menu_btn_selector">
                <TextView
                    android:drawableRight="@drawable/arrow_grey_right_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/signature_text"
                    android:textColor="@color/font_normal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_user_data_signature"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="大家好，我是有咩酱，摸咩会给你咩毛玉~微博@有咩酱"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/text_hint"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_layout_btn_pwd_update"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:background="@drawable/menu_btn_selector">
                <TextView
                    android:drawableRight="@drawable/arrow_grey_right_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/update_pwd_text"
                    android:textColor="@color/font_normal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </RelativeLayout>

        </LinearLayout>
    </zjut.salu.share.widget.MyScrollView>

</LinearLayout>
