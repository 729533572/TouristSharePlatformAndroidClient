<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_light_strategy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bacground"
    tools:context="zjut.salu.share.activity.index.LightStrategyActivity">
    <include layout="@layout/layout_toolbar"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_view_common"
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <zjut.salu.share.widget.MyScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.youth.banner.Banner
                        android:background="@color/text_hint"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/common_header_banner"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:indicator_margin="3dp"
                        app:indicator_height="4dp"
                        app:indicator_width="4dp"/>
                    <include layout="@layout/layout_light_strategy_btn"/>
                    <include layout="@layout/layout_light_strategy_hot_header"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_view_recommend"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/iv_loading_failed_recommend"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/loading_failed"
                            />
                    </FrameLayout>
                    <include layout="@layout/layout_light_strategy_new_header"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_view_new"
                        android:layout_width="match_parent"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/iv_loading_failed_new"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/loading_failed"
                            />
                    </FrameLayout>
                </LinearLayout>
            </zjut.salu.share.widget.MyScrollView>
            <zjut.salu.share.widget.CircleProgressView
                android:id="@+id/circle_progress_common"
                android:layout_width="@dimen/circle_progress_view_default_size"
                android:layout_height="@dimen/circle_progress_view_default_size"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_grow_margin"
                app:matProg_barColor="?attr/colorPrimary"
                app:matProg_barWidth="4dp"/>
            <ImageView
                android:id="@+id/iv_loading_failed"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/loading_failed"
                />
            <ImageView
                android:id="@+id/iv_empty"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/empty"
                />
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
