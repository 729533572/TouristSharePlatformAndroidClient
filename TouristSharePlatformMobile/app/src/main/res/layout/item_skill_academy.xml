<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_cover_skill_academy_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/alert_icon"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_skill_academy_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这样不广才有feel LED辅助人像摄影"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            />

        <LinearLayout
    android:gravity="bottom"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_date_skill_academy_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016年06月06日"
        android:textColor="@color/icon_text"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tv_read_num_skill_academy_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5阅读"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:gravity="end"
        android:textColor="@color/icon_text"
        />
</LinearLayout>


    </LinearLayout>
</LinearLayout>