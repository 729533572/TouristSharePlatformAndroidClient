<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:id="@+id/card_view_goto_status"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    >
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_wanna_go"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/like_no"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wanna_go_text"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:textSize="16sp"
            android:textColor="@color/hint_color"
            />
        <TextView
            android:id="@+id/tv_wanna_go_num"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2481"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:textColor="@color/orange"
            />
        <LinearLayout
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_went"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_beenhere_off"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gone_text"
                android:layout_marginLeft="6dp"
                android:textSize="16sp"
                android:textColor="@color/hint_color"
                />
            <TextView
                android:id="@+id/tv_gone_num"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2481"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:textColor="@color/orange"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

    <zjut.salu.share.widget.NoScrollGridView
        android:id="@+id/grid_view_local_index"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:numColumns="3"
        android:clickable="true"
        android:background="@color/md_white_1000"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="10dp"/>

    <ImageView
        android:id="@+id/iv_recommand_local_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/local_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        />

    <zjut.salu.share.widget.NoScrollGridView
        android:id="@+id/grid_view_local_square_index"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:numColumns="2"
        android:clickable="true"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="10dp"/>
</LinearLayout>