<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_replace_nick_name"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacground"
    tools:context="zjut.salu.share.activity.ReplaceNickNameActivity">

    <include layout="@layout/view_top_bar"/>

        <EditText
            android:id="@+id/et_change_nickname_content"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:maxLines="2"
            android:textColorHint="@color/text_hint"
            android:hint="@string/input_new_nickname_text"
            android:textSize="16sp"
            />

</LinearLayout>
